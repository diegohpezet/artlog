<header class="bg-light shadow-sm">
  <nav class="navbar navbar-expand-md p-0">
    <div class="container-fluid border-bottom py-2 py-sm-0">
      <a class="navbar-brand d-none d-sm-block" href="/">
        <img src="/images/logo.png" class="img-responsive" width="50" height="50" />
      </a>
      <form class="d-flex flex-grow-1" role="search">
        <input class="form-control me-2 rounded-pill" type="search" placeholder="Search on ArtLog"
          aria-label="Search">
      </form>
      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
        aria-controls="offcanvasDarkNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
        aria-labelledby="offcanvasDarkNavbarLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Menu</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body navbar-collapse">
          <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
            <li class="nav-item">
              <a class="nav-link" href="/"><i class="bi bi-house d-md-none"></i> Home</a>
            </li>
            <%if (isLoggedIn) { %>
              <li class="nav-item">
                <a class="nav-link" href="/users/<%= user.id %>"><i class="bi bi-person d-md-none"></i> Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#uploadContent"><i class="bi bi-upload d-md-none"></i> Upload content!</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/auth/signout"><i class="bi bi-box-arrow-left d-md-none"></i> Logout</a>
              </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Sign in to upload content!</a>
            </li>
            <% } %>
          </ul>
          <div class="d-block d-md-none">
            <hr />
            <p>Made with ❤️ by <a href="https://github.com/diegohpezet">diegohpezet</a></p>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <nav class="navbar navbar-expand p-0">
    <div class="container-fluid">
      <ul class="navbar-nav border-end">
        <li class="nav-item">
          <a class="nav-link" href="#">All</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Following</a>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="#">Some categories here...</a>
        </li>
      </ul>
    </div>
  </nav>
</header>